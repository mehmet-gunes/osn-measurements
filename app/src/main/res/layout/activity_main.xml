<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.posn.commentpropagation.MainActivity"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/dropbox_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dropbox is not connected!"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dropbox_status_text"
        android:text="Connect Dropbox"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:padding="20dp"
        android:layout_marginBottom="50dp"/>



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@id/connect_button"
        android:layout_centerHorizontal="true"
        android:id="@+id/num_tests_text"
        android:layout_marginBottom="50dp"
        android:hint="Number of Tests"
        android:padding="20dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text="10"/>

    <TextView
        android:id="@+id/numTests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of Tests:"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_above="@+id/num_tests_text"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/test_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tests not started!"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_below="@+id/num_tests_text"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/start_tests_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Tests"
        android:layout_below="@+id/test_status_text"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:padding="20dp"/>


</RelativeLayout>
